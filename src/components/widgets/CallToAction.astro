---
import { Icon } from 'astro-icon';
---

<section class="bg-primary-100 dark:bg-slate-800" id="contact">
	<div class="max-w-screen-md mx-auto py-8 md:pb-20">
		<div class="text-center mb-10">
			<p class="text-base text-primary-600 dark:text-primary-200 font-semibold tracking-wide uppercase" id="contacttitle">Contact</p>
			<h3 class="text-3xl sm:text-4xl leading-normal font-extrabold tracking-tight text-gray-900 dark:text-gray-400">
			  Get In Touch
			</h3>
		</div>
		<form class="w-full max-w-3xl mx-auto text-center px-6 pt-6 pb-2 rounded-md shadow-xl dark:shadow-none bg-white dark:bg-slate-900" action="https://formspree.io/f/mpznepgy" method="POST">
			<div class="flex flex-wrap -mx-3">
				<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
					<label class="block uppercase tracking-wide text-gray-500 dark:text-gray-400 text-xs font-bold mb-2" for="grid-first-name">
						First Name
					</label>
					<input name="firstname" required class="appearance-none block w-full bg-gray-200 text-gray-500 dark:text-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="text" placeholder="Matthew">
				</div>
				<div class="w-full md:w-1/2 px-3">
					<label class="block uppercase tracking-wide text-gray-500 dark:text-gray-400 text-xs font-bold mb-2" for="grid-last-name">
						Last Name
					</label>
					<input name="surname" required class="appearance-none block w-full bg-gray-200 text-gray-500 dark:text-gray-400 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name" type="text" placeholder="Harvey">
				</div>
				</div>
				<div class="flex flex-wrap -mx-3 mb-6">
				<div class="w-full px-3">
					<label class="block uppercase tracking-wide text-gray-500 dark:text-gray-400 text-xs font-bold mb-2" for="grid-password">
					Email Address
					</label>
					<input name="email" required class="appearance-none block w-full bg-gray-200 text-gray-500 dark:text-gray-400 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-email" type="email" placeholder="matthewtlharvey@gmail.com">
				</div>
				</div>
				
				<div class="flex flex-wrap -mx-3 mb-6">
				<div class="w-full px-3">
					<label class="block uppercase tracking-wide text-gray-500 dark:text-gray-400 text-xs font-bold mb-2" for="grid-password">
					Your Message
					</label>
					<textarea name="message" placeholder="Example message" required rows="10" class="appearance-none block w-full bg-gray-200 text-gray-500 dark:text-gray-400 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" />
				</div>
				<div class="grid justify-items-stretch w-full px-3">
					<div class="md:flex items-end text-right justify-self-end">
						<button
							class="btn text-white bg-primary-600 hover:bg-primary-800 mb-4 sm:mb-0"
							type="submit"
						>
							<Icon name="tabler:arrow-right" class="w-5 h-5 mr-1 -ml-1.5" /> Submit
						</button>
					</div>
				</div>
			</div>
	  </form>
	</div>
</section>